/* pages/order/paymenthistory.wxss */
.labal {
  font-size: 32rpx;
  color: #3683d6;
  align-items:center;
}
.line {
  margin-left: 0rpx;
  margin-right: 0rpx;
  height: 0.5px;
  background-color: #f3f3f3;

}
.card{
  font-size:28rpx;
  border:0.5rpx solid #3683d6;
}
.cardtitle{
  font-size:32rpx !important;
}
.input {
  font-size: 32rpx;
  height: 50rpx;
  width: 100rpx;
  border-bottom:0.5rpx solid #f3f3f3;
}
.logincard {
  width: 600rpx !important;
  display: flex !important;
  align-items: center !important;
  justify-content: center !important;
}

.logincardtitle {
  font-size: 40rpx !important;
  color: #3683d6 !important;
  display: flex !important;
  align-items: center !important;
  justify-content: center !important;
}

.logininputbox {
  margin: 5rpx 20rpx;
  border: 1rpx solid #3683d6;
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 32rpx;
  color: #3683d6;
  width: 540rpx;
}

.loginbtnbox {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width: 540rpx;
  margin: 0rpx 20rpx;
}

button[plain] {
  border: 0;
  margin-right: 0;
  padding: 0rpx 10rpx;
  background-color: #fff;
  line-height: 52rpx;
  font-size: 32rpx;
  color: #3683d6;
  border-left: 1rpx solid #3683d6;
  border-radius: 0%;
}