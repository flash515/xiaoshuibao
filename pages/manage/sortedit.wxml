<l-button bg-color="#06c05f" bind:lintap="SortUpdate">更新类别</l-button>


<view style="display:flex; flex-direction:column;justify-content:space-between;align-items:center;font-size: 28rpx;padding-left:25rpx;padding-right:25rpx;">
  <l-button bg-color="#06c05f" bind:lintap="SortUpdate">新增一级分类</l-button>
  <l-input type="text" label="分类编号" placeholder="{{id}}"  bind:lintap="bvCategory1Id"></l-input>
  <l-input type="text" label="分类名称" placeholder="{{name}}" bind:lintap="bvCategory1Name"></l-input>
  <l-button bg-color="#06c05f" bind:lintap="bvCategory1Add">确定</l-button>
</view>
<text>/t/n</text>
<view style="display:flex; flex-direction:column;justify-content:space-between;align-items:center;font-size: 28rpx;padding-left:25rpx;padding-right:25rpx;">
  <l-button bg-color="#06c05f" bind:lintap="SortUpdate">修改一级分类</l-button>
  <l-input type="text" label="分类编号" placeholder="{{updatedate}}"></l-input>
  <l-input type="text" label="分类名称" placeholder="{{updatedate}}"></l-input>
  <l-button bg-color="#06c05f" bind:lintap="Category1Update">确定</l-button>
</view>
<text>/t/n</text>
<view style="display:flex; flex-direction:column;justify-content:space-between;align-items:center;font-size: 28rpx;padding-left:25rpx;padding-right:25rpx;">
  <l-button bg-color="#06c05f" bind:lintap="SortUpdate">删除一级分类</l-button>
  <l-input type="text" label="分类编号" placeholder="{{updatedate}}"></l-input>
  <l-input type="text" label="分类名称" placeholder="{{updatedate}}"></l-input>
  <l-button bg-color="#06c05f" bind:lintap="Category1Delete">确定</l-button>
</view>
<view wx:for="{{sortarray}}" wx:key="key" wx:for-index="key1" wx:for-item="sort1">
  <input type="text" placeholder="{{sort1.Category1Code}}" value="{{sort1.Category1Code}}" data-index="{{key1}}" bindtap="bvCategoryCode"/>
  <input type="text" placeholder="{{sort1.Category1Name}}" value="{{sort1.Category1Name}}" data-index="{{key1}}" bindtap="bvCategoryName"/>
  <view wx:for="{{sort1.Category2Array}}" wx:key="key" wx:for-index="key2" wx:for-item="sort2">
    <input type="text" placeholder="{{sort2.Category2Code}}" value="{{sort2.Category2Code}}" bindtap="bvCategory1Id"/>
  <input type="text" placeholder="{{sort2.Category2Name}}" value="{{sort2.Category2Name}}" bindtap="bvCategory1Name"/>
  
  </view>
</view>
<view class="nr">

    <view style="display:flex;width: 100%;height: 300rpx;">
        <picker-view indicator-style="height: 100rpx;" style="width: 100%;height: 300rpx;text-align: center;" value="{{pIndex}}" bindchange="changeCategory1">
            <picker-view-column>

                <view wx:for="{{sortarray}}" wx:key="Category1Name" style="line-height: 100rpx;">

                  <input type="text" placeholder="{{item.Category1Name}}" value="{{item.Category1Name}}" data-index="{{key1}}" bindtap="bvCategory1Name"/>
                </view>
            </picker-view-column>
        </picker-view>
        <picker-view indicator-style="height: 100rpx;" style="width: 100%;height: 300rpx;text-align: center" value="{{cIndex}}" bindchange="changeCategory2">
            <picker-view-column>
                <view wx:for="{{sortarray[pIndex].Category2Array}}" wx:key="Category2Name" style="line-height: 100rpx">
                
                <input type="text" placeholder="{{item.Category2Name}}" value="{{item.Category2Name}}" data-index="{{key1}}" bindtap="bvCategory2Name"/>
                </view>
            </picker-view-column> 
        </picker-view>
        <picker-view indicator-style="height: 100rpx;" style="width: 100%;height: 300rpx;text-align: center" value="{{aIndex}}" bindchange="changeCategory3">
            <picker-view-column>
                <view wx:for="{{sortarray[pIndex].Category2Array[cIndex].Category3Array}}" wx:key="Category3Name" style="line-height: 100rpx">

                <input type="text" placeholder="{{item.Category3Name}}" value="{{item.Category3Name}}" data-index="{{key1}}" bindtap="bvCategory2Name"/>
                </view>
            </picker-view-column>
        </picker-view>
    </view>
  </view>