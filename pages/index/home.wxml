<!--pages/index/home.wxml-->
<!-- 轮播头图 -->
<view>
  <swiper class="swiper" indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" circular="{{circular}}" vertical="{{vertical}}" interval="{{interval}}" duration="{{duration}}" previous-margin="{{previousMargin}}px" next-margin="{{nextMargin}}px">
    <block wx:for="{{image}}" wx:for-index="index" wx:key="key">
      <swiper-item>
        <image src="{{item}}" class="swiper image" mode="scaleToFill" />
      </swiper-item>
    </block>
  </swiper>
</view>
<!-- 通知栏 -->
<l-notice-bar show="{{true}}" type="swip" speed="2000" front-icon-name="notification" front-icon-size="20" front-icon-color="#3683D6" bind:lintap="onNoticeView" swip-arr="{{noticearray}}">
</l-notice-bar>
<view class="mainframe">
  <view style="display:flex; flex-direction:row; justify-content:space-between;align-items:center;">
    <view wx:if="{{userphone==''}}" style="display:flex; flex-direction:row; justify-content:space-between;font-size: 28rpx;color: #3683d6;">
      <navigator url="../mine/userinfo">请用手机号码登录</navigator>
    </view>
    <view wx:else style="display:flex; flex-direction:row; justify-content:space-between;font-size: 28rpx;color: #3683d6;">
      <view>用户：{{userphone}}</view>
    </view>
    <view style="display:flex; flex-direction:row;justify-content:space-between;align-items:center;font-size:28rpx;padding-left: 25rpx;color: #3683d6;">
      <view>所在区域：</view>
      <picker mode="region" bindchange="bindRegionChange" value="{{region}}" custom-item="{{customItem}}">
        <view class="picker">
          {{region[1]}}/{{region[2]}}
        </view>
      </picker>
    </view>
  </view>

  <view style="display:flex; flex-direction:row; justify-content:space-between;align-items:center;margin-top: 25rpx;">
    <l-button size="mini" shape="semicircle" plain="{{true}}" icon="customer-service" icon-color="#3683d6" open-type="contact">联系客服</l-button>
    <l-button size="mini" shape="semicircle" plain="{{true}}" icon="share" icon-color="#3683d6" open-type="share">分享小税宝</l-button>
  </view>
  <l-list title="代理代办服务" icon="notification" right-desc="更多" tag-position="right" url="../product/allproduct" />
  <l-grid row-num="4">
    <l-grid-item key='one' slot='one'>
      <navigator url="../product/productview?category1=地址服务">
        <l-icon name='order' />
        <view class="text">地址服务</view>
      </navigator>
    </l-grid-item>
    <l-grid-item key='two' slot='two'>
      <navigator url="../product/productview?category1=工商代办">
        <l-icon name='order' />
        <view class="text">工商代办</view>
      </navigator>
    </l-grid-item>
    <l-grid-item key='three' slot='three'>
      <navigator url="../product/productview?category1=财税服务">
        <l-icon name='order' />
        <view class="text">财税服务</view>
      </navigator>
    </l-grid-item>
    <l-grid-item key='four' slot='four'>
      <navigator url="../product/productview?category1=企业托管">
        <l-icon name='order' />
        <view class="text">企业托管</view>
      </navigator>
    </l-grid-item>
    <l-grid-item key='five' slot='five'>
      <navigator url="../product/productview?category1=资质代办">
        <l-icon name='order' />
        <view class="text">资质代办</view>
      </navigator>
    </l-grid-item>
  </l-grid>
  <l-list title="辅助工具" icon="notification" />
  <l-grid>
    <l-grid-item key='one' slot='one'>
      <navigator url='../tools/meetingroom/meetingroom'>
        <l-icon name='comment' />
        <view class="text">快捷会议室</view>
      </navigator>
    </l-grid-item>

    <l-grid-item key='two' slot='two'>
      <navigator class='miniprogram-btn' target="miniProgram" open-type='navigate' app-id='wx9f0f317564969fbf' path='pages/index/index'>
        <l-icon name='research' />
        <view class="text">经营范围查询</view>
      </navigator>
    </l-grid-item>

    <l-grid-item key='three' slot='three'>
      <navigator class='miniprogram-btn' target="miniProgram" open-type='navigate' app-id='wx5b0ed3b8c0499950' path='pages/index/index'>
        <l-icon name='research' />
        <view class="text">企业信息查询</view>
      </navigator>
    </l-grid-item>
  </l-grid>
  <l-list title="精选服务" icon="notification" />
  <l-grid row-num="2">
    <l-grid-item key='one' slot='one'>
      <navigator url="../product/productview?category1=地址服务">
        <image style="width: 120px; height: 50px; background-color: #eeeeee;border-radius: 5px;overflow: hidden;" mode="{{item.mode}}" src="cloud://xsbmain-9gvsp7vo651fd1a9.7873-xsbmain-9gvsp7vo651fd1a9-1304477809/setting/image/地址服务.jpg"></image>
        <view class="text">地址服务</view>
      </navigator>
    </l-grid-item>
    <l-grid-item key='two' slot='two'>
      <navigator url="../product/productview?category1=工商代办">
        <image style="width: 120px; height: 50px; background-color: #eeeeee;border-radius: 5px;overflow: hidden;" mode="{{item.mode}}" src="cloud://xsbmain-9gvsp7vo651fd1a9.7873-xsbmain-9gvsp7vo651fd1a9-1304477809/setting/image/工商代办.jpg"></image>
        <view class="text">工商代办</view>
      </navigator>
    </l-grid-item>
    <l-grid-item key='three' slot='three'>
      <navigator url="../product/productview?category1=企业托管">
        <image style="width: 120px; height: 50px; background-color: #eeeeee;border-radius: 5px;overflow: hidden;" mode="{{item.mode}}" src="cloud://xsbmain-9gvsp7vo651fd1a9.7873-xsbmain-9gvsp7vo651fd1a9-1304477809/setting/image/企业托管.jpg"></image>
        <view class="text">企业托管</view>
      </navigator>
    </l-grid-item>
    <l-grid-item key='four' slot='four'>
      <navigator url="../product/productview?category1=资质代办">
        <image style="width: 120px; height: 50px; background-color: #eeeeee;border-radius: 5px;overflow: hidden;" mode="{{item.mode}}" src="cloud://xsbmain-9gvsp7vo651fd1a9.7873-xsbmain-9gvsp7vo651fd1a9-1304477809/setting/image/资质代办.jpg"></image>
        <view class="text">资质代办</view>
      </navigator>
    </l-grid-item>

  </l-grid>
  <view wx:if="{{promoterlevel=='member' || promoterlevel=='sliver'|| promoterlevel=='gold' || promoterlevel=='platinum'}}">
    <l-list title="会员专享服务" icon="notification" right-desc="更多" tag-position="right" />
    <l-grid>
      <l-grid-item key='one' slot='one'>
        <navigator url="../product/productview?category1=财税服务">
          <l-icon name='order' />
          <view class="text">财税服务</view>
        </navigator>
      </l-grid-item>
    </l-grid>
  </view>
</view>