/* pages/index/home.wxss */

.grid {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
  align-items: flex-start;
}

.item {
  width: 50%;
}

.userinfo,
.uploader,
.tunnel {
  margin-top: 0rpx;
  height: 140rpx;
  width: 100%;
  background: #fff;
  border: 0px solid rgb(255, 255, 255);
  border-left: none;
  border-right: none;
  display: flex;
  flex-direction: row;
  align-items: center;
  transition: all 300ms ease;
}

.userinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  margin: 20rpx;
  border-radius: 50%;
  background-size: cover;
  background-color: white;
}

.userinfo-avatar:after {
  border: none;
}

.userinfo-nickname {
  font-size: 32rpx;
  color: #007aff;
  background-color: white;
  background-size: cover;
}

.userinfo-nickname::after {
  border: none;
}

.btn {
  background: #EC6128;
  height: 100rpx;
  width: 600rpx;
  border-radius: 20rpx;
  margin: 0 auto;
  margin-top: 20rpx;
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
}
.logincard {
  width: 600rpx !important;
  display: flex !important;
  align-items: center !important;
  justify-content: center !important;
}

.logincardtitle {
  font-size: 40rpx !important;
  color: #3683d6 !important;
  display: flex !important;
  align-items: center !important;
  justify-content: center !important;
}

.logininputbox {
  margin: 5rpx 20rpx;
  border: 1rpx solid #3683d6;
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 32rpx;
  color: #3683d6;
  width: 540rpx;
}

.loginbtnbox {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width: 540rpx;
  margin: 0rpx 20rpx;
}

button[plain] {
  border: 0;
  margin-right: 0;
  padding: 0rpx 10rpx;
  background-color: #fff;
  line-height: 52rpx;
  font-size: 32rpx;
  color: #3683d6;
  border-left: 1rpx solid #3683d6;
  border-radius: 0%;
}