/* pages/mine/qrcode.wxss */
.content{
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border: none;
  border-radius: 50%;
  background-size: cover;
  background-color: white;
}
.avatarBtn {
  width: 120rpx;
  height: 120rpx;
  border: 0.5;
  border-radius: 50%;
  padding: 0;
  background-color: white;
}
.btn {
  background: #EC6128;
  height: 100rpx;
  width: 600rpx;
  border-radius: 20rpx;
  margin: 0 auto;
  margin-top: 20rpx;
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
}