.index{
  width: 100%;
  height: 100%;
  overflow: hidden;
  position: relative;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  box-sizing: border-box;
  padding-left:25rpx;
  padding-right:25rpx;
}
.sortinput{
  width: 100%;
  height: 100rpx;
  line-height: 50rpx;
  border: 1px solid #d8dee5;
  border-radius: 10rpx;
  margin-top: 10rpx;
  padding: 0 25rpx;
  box-sizing: border-box;
  font-size: 28rpx;
}
.item{
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  padding:20rpx 50rpx 20rpx 50rpx;
  box-sizing: border-box;
  border-bottom: 1px solid #EEE;
}