}

.namecard {
  padding: 60rpx 30rpx 0rpx 30rpx;
}

.user {
  width: 690rpx;
  display:flex; 
  flex-direction:row;
  align-items:flex-end;
  justify-content:space-between;
  margin-left: 0rpx;
  margin-right: 0rpx;
  padding-left: 0rpx;
  padding-right: 0rpx;
}

.companyname {
  width: 690rpx;
  font-size: 55rpx;
  font-weight: bold;
  color: rgb(0, 0, 0);
  text-align: center;
  min-height: 55rpx;
}
.logolayout {
  display:flex; 
  justify-content:right;
  position: relative;
  z-index: 2;
}

.companylogo {
  width : 180rpx;
  height : 180rpx; 
}

.username {
  font-size: 45rpx;
  font-weight: bold;
  color: rgb(0, 0, 0);
}

.namecardtitle {
  font-size: 32rpx;
  font-weight: bold;
  color: rgb(0, 0, 0);
}

.handphone {
  display:flex; 
  width: 350rpx;
  font-size: 32rpx;
  color: rgb(0, 0, 0);
}

.wechat {
  display:flex;
  width: 350rpx;
  font-size: 32rpx;
  color: rgb(0, 0, 0);
}
.telephone {
  display:flex;
  width: 350rpx;
  font-size: 32rpx;
  color: rgb(0, 0, 0);
}
.email {
  display:flex; 
  font-size: 32rpx;
  color: rgb(0, 0, 0);
}

.website {
  display:flex; 
  font-size: 32rpx;
  color: rgb(0, 0, 0);
}

.address {
  display:flex; 
  font-size: 32rpx;
  color: rgb(0, 0, 0);
}

.label {
  font-size: 28rpx;
  margin-left: 25rpx;
}

.phonecode {
  border: none !important;
}

.radio {
  margin-top: 20rpx;
  justify-content:left;
}

.bgarray {
  width: 250rpx;
  height: 200rpx;
}

.line {
  margin-left: 0rpx;
  margin-right: 0rpx;
  height: 0.5px;
  background-color: #f3f3f3;

}

