<!-- 背景层 -->
<image class="bgimage" src="{{blessbg}}" mode="scaleToFill" />
<!-- 名片层 -->
<view class="uplayout">
  <view class="namecard">
    <view class="companyname">{{blesstitle}}</view>
    <text>\n</text>
    <view class="user" style="display:flex; flex-direction:row; justify-content:space-between;align-items:flex-end;">

        <view class="username">{{content}}</view>
      <image class="companylogo" src="{{blesslogo}}"></image>
    </view>

  </view>
</view>

  <view hidden="{{btnhidden}}" style="display:flex; flex-direction:row; justify-content:space-between;" class="mainframe">
    <l-button type="default" shape="semicircle" bind:lintap="bvEdit">制作贺卡</l-button>
    <text space="emsp" decode="{{true}}">&emsp;</text>
    <l-button size="mini" shape="semicircle" plain="{{true}}" icon="share" icon-color="#3683d6" open-type="share">发朋友圈</l-button>
    <l-button size="mini" shape="semicircle" plain="{{true}}" icon="share" icon-color="#3683d6" open-type="share">转发贺卡</l-button>
  </view>



<view class="mainframe">
  <l-tabs bind:linchange="changeTabs">
    <l-tabpanel tab="预设贺卡" key="one" slot="one">
      <scroll-view scroll-y="true" style="display: flex;flex-direction:column; width: 100%;height: 400rpx; box-sizing: border-box;padding-left: 20rpx;padding-right: 20rpx;">
        <l-radio-group placement="column" none-checked="{{false}}" bind:linchange="bvBgSelect">
        <block wx:for="{{blesscardbg}}" wx:key="key">
          <l-radio placement="left" color="black" select-color="green" size="40" key="{{item}}" l-class="radio">
            <image src="{{item}}" class="bgarray" />
          </l-radio>
        </block>
      </l-radio-group>
  </scroll-view>

    </l-tabpanel>
    <l-tabpanel tab="贺卡背景" key="two" slot="two">
      <view style="display:flex; flex-direction:row;margin-top: 10rpx; justify-content:space-between;align-items:center;font-size: 28rpx;">
        <label class="text">选择并上传自定义贺卡背景：</label>
      </view>
      <view style="font-size: 28rpx;padding-left:25rpx;padding-right:25rpx; padding-top: 10rpx;">
        <l-image-picker size="1" count="1" bind:linchange="bvChooseImage" bind:linremove="bvRemoveImage" urls="{{imageview}}" />
        <l-button plain="{{true}}" bind:lintap="bvUploadImage">上传图片</l-button>
      </view>
    </l-tabpanel>
    <l-tabpanel tab="贺卡内容" key="three" slot="three">
      <view>
        <l-input type="text" label="分享标题：" value="{{sharetitle}}" bind:lininput="bvShareTitle">
        </l-input>
        <l-input type="text" label="贺卡标题：" value="{{blesstitle}}" bind:lininput="bvBlessTitle">
        </l-input>
      </view>
      <view>
        <label class="labal">贺卡内容：</label>
        <l-textarea type="text" indicator="{{true}}" maxlength="140" auto-height="{{true}}" value="{{blesscontent}}" bind:lininput="bvContent"></l-textarea>
      </view>
    </l-tabpanel>
    <l-tabpanel tab="贺卡标识" key="four" slot="four">
      <view style="display:flex; flex-direction:row;margin-top: 10rpx; justify-content:space-between;align-items:center;font-size: 28rpx;">
        <label class="text">选择并上传标识：</label>

      </view>
      <view style="font-size: 28rpx;padding-left:25rpx;padding-right:25rpx; padding-top: 10rpx;">
        <l-image-picker size="2" count="1" bind:linchange="bvChooseLogo" bind:linremove="bvRemoveLogo" urls="{{blesslogoview}}" />
        <l-button plain="{{true}}" bind:lintap="bvUploadLogo">上传图片</l-button>
      </view>
    </l-tabpanel>
  </l-tabs>
  <text>\n</text>
  <view hidden="{{btnhidden}}" style="display:flex; flex-direction:row; justify-content:space-between;">

    <l-button type="default" shape="semicircle" icon="to-top" icon-color="white" form-type="submit" bind:lintap="UpdateData">保存信息
    </l-button>
    <text space="emsp" decode="{{true}}">&emsp;</text>
    <l-button type="default" bind:lintap="RefreshData" shape="semicircle" icon="loading" icon-color="white">刷新信息
    </l-button>
  </view>

</view>