page {
  background: linear-gradient(0deg, rgba(220, 87, 68, 1), rgba(213, 91, 70, 1));
  color: #333;
}

.top {
  background: linear-gradient(0deg, rgba(220, 87, 68, 1), rgba(213, 91, 70, 1));
  height: 40vh;
  border-radius: 0rpx 0rpx 68% 68% / 0rpx 0rpx 25% 25%;
  box-shadow:0px 7rpx 30rpx 0px rgba(157,60,26,1);
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 7%;
}
button[plain]{ 
  border:0
}

.packettext{
  margin: 0 auto;

  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 100rpx;
  font-weight: bold;
  color:rgba(254,214,155,1)
}
.btn-open{
  width: 220rpx;
  height: 220rpx;
  margin: 0 auto;
  /* margin-top: 350rpx; */
  border-radius: 50%;
  background:rgba(254,214,155,1);
  box-shadow:0px 7rpx 30rpx 0px rgba(157,60,26,1);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 60rpx;
  font-weight: bold;
  color: #DA5844;
  line-height: 60rpx;
}
.btn-open.text {
  vertical-align:middle;
  display: table-cell;
}
.codebtn{
  width: 220rpx;
  height: 50rpx;
  margin-left: 20rpx;
  padding: 0rpx;
  border-radius: 5%;
  background:rgba(254,214,155,1);
}
.codebtntext {
  font-size: 40rpx;
  line-height: 50rpx;
  color: #DA5844;
  vertical-align:middle;
  display: flex;
  align-items:center;
  justify-content: center;
}
.input {
  height: 50rpx;
  width: 250rpx;
  font-size: 40rpx;
  color:rgba(254,214,155,1);
  border-bottom:1rpx solid rgba(254,214,155,1);
}
.labal {
  width: 160rpx;
  font-size: 40rpx;
  color:rgba(254,214,155,1);
  margin-left: 0rpx;
  align-items:center;
}