<!-- 背景层 -->
<image class="bgimage" src="{{cardbg}}" mode="scaleToFill" />
<!-- 名片层 -->
<view class="uplayout">
  <view class="namecard">
    <input class="companyname" placeholder="企业名称" bindblur="bvCompanyName" />
    <text>\n</text>
    <view class="user" style="display:flex; flex-direction:row;align-items:flex-end;">
      <view style="display:flex;flex-direction:column;justify-content:left;">
        <view style="display:flex; flex-direction:row;align-items:flex-end;">
          <input class="username" style="display:flex;justify-content:left;" placeholder="姓名" bindblur="bvUserName" />
          <input class="namecardtitle" style="display:flex;justify-content:left;" placeholder="职位" bindblur="bvTitle" />
        </view>
        <text>\n</text>
        <view class="handphone" style="display:flex; flex-direction:row;justify-content:left;align-items:center;">手机：<input style="width: 250rpx;" placeholder="手机" bindblur="bvHandPhone" /></view>
        <view class="wechat" style="display:flex; flex-direction:row;justify-content:left;align-items:center;">微信：<input style="width: 250rpx;" placeholder="微信" bindblur="bvWeChat" /></view>
        <view class="telephone" style="display:flex; flex-direction:row;justify-content:left;align-items:center;">座机：<input style="width: 250rpx;" placeholder="座机" bindblur="bvTelePhone" /></view>
      </view>
      <view class="logolayout">
        <l-image-picker l-item-class="companylogo" count="1" bind:linchange="bvChooseLogo" custom="{{true}}" bind:linremove="bvRemoveLogo" urls="{{logoview}}">
          <view>
            <image class="companylogo" src="https://7873-xsbmain-9gvsp7vo651fd1a9-1304477809.tcb.qcloud.la/setting/namecard/%E9%80%89%E6%8B%A9logo.png?sign=3c5fa6e303deb8cf1d8c25e6c38c9363&t=1682515522" />
          </view>
        </l-image-picker>
      </view>
    </view>
    <view>
      <view class="email" style="display:flex; flex-direction:row;justify-content:left;align-items:center;">邮箱：<input placeholder="邮箱" bindblur="bvEmail" /></view>
      <view class="website" style="display:flex; flex-direction:row;justify-content:left;align-items:center;">网站：<input placeholder="网站" bindblur="bvWebsite" /></view>
      <view class="address" style="display:flex; flex-direction:row;justify-content:left;align-items:center;">地址：<input placeholder="地址" bindblur="bvAddress" /></view>
    </view>
  </view>
</view>

<view class="mainframe">
  <l-tabs bind:linchange="changeTabs">
    <l-tabpanel tab="企业信息" key="one" slot="one">
      <view style="display:flex; flex-direction:row;margin-top: 10rpx; justify-content:space-between;align-items:center;font-size: 28rpx;">
        <label class="labal">行业分类：</label>
      </view>
      <view>
        <view class="input" bindtap="getbox" wx:if="{{inputShow}}" style="color: #999;">{{category1name}}/{{category2name}}/{{category3name}}</view>
        <view class="input" bindtap="getbox" wx:if="{{!inputShow}}">{{category1}}/{{category2}}/{{category3}}</view>
        <!-- 三级分类弹框 -->
        <view class="box" wx:if="{{boxShow}}">
          <!-- 阴影 -->
          <view class="black" bindtap="hidebox"></view>
          <!-- 内容 -->
          <view class="nr">
            <view class="item">
              <l-button plain="{{true}}" bind:lintap="hidebox">取消</l-button>
              <l-button bg-color="#06c05f" bind:lintap="confirm">确认</l-button>
            </view>
            <view style="display:flex;width: 100%;height: 300rpx;">
              <picker-view indicator-style="height: 100rpx;" style="width: 100%;height: 300rpx;text-align: center;" value="{{pIndex}}" bindchange="changeCategory1">
                <picker-view-column>
                  <view wx:for="{{businesssortarray}}" wx:key="Category1Name" style="line-height: 100rpx;">{{item.Category1Name}}</view>
                </picker-view-column>
              </picker-view>
              <picker-view indicator-style="height: 100rpx;" style="width: 100%;height: 300rpx;text-align: center" value="{{cIndex}}" bindchange="changeCategory2">
                <picker-view-column>
                  <view wx:for="{{businesssortarray[pIndex].Category2Array}}" wx:key="Category2Name" style="line-height: 100rpx">{{item.Category2Name}}</view>
                </picker-view-column>
              </picker-view>
              <picker-view indicator-style="height: 100rpx;" style="width: 100%;height: 300rpx;text-align: center" value="{{aIndex}}" bindchange="changeCategory3">
                <picker-view-column>
                  <view wx:for="{{businesssortarray[pIndex].Category2Array[cIndex].Category3Array}}" wx:key="Category3Name" style="line-height: 100rpx">{{item.Category3Name}}</view>
                </picker-view-column>
              </picker-view>
            </view>
          </view>
        </view>
      </view>
      <label class="labal">搜索关键词：</label>
      <l-textarea type="text" indicator="{{true}}" maxlength="20" auto-height="{{true}}" value="{{keywords}}" bind:linblur="bvKeyWords"></l-textarea>
      <label class="labal">企业简介：</label>
      <l-textarea type="text" indicator="{{true}}" maxlength="140" auto-height="{{true}}" value="{{businessscope}}" bind:linblur="bvBusinessScope"></l-textarea>

      <text>\n</text>
    </l-tabpanel>
    <l-tabpanel tab="名片背景" key="two" slot="two">
      <scroll-view scroll-y="true" style="display: flex;flex-direction:column; width: 100%;height: 400rpx; box-sizing: border-box;padding-left: 20rpx;padding-right: 20rpx;">
        <label class="labal">系统背景：</label>
        <l-radio-group placement="column" bind:linchange="bvBgSelect">
          <block wx:for="{{cardbgarray}}" wx:key="key">
            <l-radio placement="left" color="black" select-color="green" size="40" key="{{item}}" l-class="radio">
              <image class="bgarray" src="{{item}}" />
            </l-radio>
          </block>
          <label class="labal">自选背景：</label>
          <l-radio placement="left" color="black" select-color="green" size="40" key="{{bgview}}" l-class="radio">
            <l-image-picker count="1" bind:linchange="bvChooseBg" bind:linremove="bvRemoveBg" urls="{{bgview}}" custom="{{true}}">
              <view>
                <image class="bgarray" src="https://7873-xsbmain-9gvsp7vo651fd1a9-1304477809.tcb.qcloud.la/setting/namecard/%E5%90%8D%E7%89%87%E8%83%8C%E6%99%AF.png?sign=1acdfb709f87f6d2b53ac2698c7c7c0b&t=1682515463" />
              </view>
            </l-image-picker>
          </l-radio>
        </l-radio-group>

      </scroll-view>
      <text>\n</text>
    </l-tabpanel>
    <l-tabpanel tab="图片资料" key="three" slot="three">
      <view style="display:flex; flex-direction:row;margin-top: 10rpx; justify-content:space-between;align-items:center;font-size: 28rpx;">
        <label class="labal">选择并上传图片资料：</label>

      </view>
      <view style="font-size: 28rpx;padding-left:25rpx;padding-right:25rpx; padding-top: 10rpx;">
        <l-image-picker count="4" bind:linchange="bvChooseImage" bind:linremove="bvRemoveImage" urls="{{imageview}}" custom="{{true}}">
          <view>
            <image class="bgarray" src="https://7873-xsbmain-9gvsp7vo651fd1a9-1304477809.tcb.qcloud.la/setting/namecard/%E5%85%B6%E4%BB%96%E5%9B%BE%E7%89%87.png?sign=17ef3b027a74488e284e902d682514c4&t=1682515422" />
          </view>
        </l-image-picker>
      </view>
      <text>\n</text>
    </l-tabpanel>
  </l-tabs>
  <view style="display:flex; flex-direction:row; justify-content:space-between;">

    <l-button size="mini" shape="semicircle" icon="up" icon-color="#3683d6" plain="{{true}}" form-type="submit" bind:lintap="bvUpdate">保存信息
    </l-button>
    <l-button size="mini" shape="semicircle" plain="{{true}}" icon="eye" icon-color="#3683d6" bind:lintap="bvView">预览名片</l-button>
  </view>
  <text>\n</text>
</view>