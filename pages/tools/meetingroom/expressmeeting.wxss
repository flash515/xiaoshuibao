.container {
  height: 100%;
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;

}

.avatarImg {
  width: 100rpx;
  height: 100rpx;

  border: none;
  border-radius: 5%;
  background-size: cover;
  background-color: white;
}

.avatarBtn {
  width: 100rpx;
  height: 100rpx;

  border: none;
  border-radius: 5%;
  padding: 0;
  background-color: white;
}


.button {
  border-radius: 10px;
  text-align: center;
  margin-top: 50rpx;
  height: 100rpx;
  width: 500rpx;
  background: #fff;
  border: 0px solid rgb(0, 0, 0);
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  background-color: powderblue;
}

.text {
  font-size: 28rpx;
  color: rgb(0, 0, 0);
}